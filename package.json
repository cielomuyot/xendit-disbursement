{
  "name": "backend-coding-test",
  "version": "1.1.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --reporter=text --reporter lcov mocha --recursive tests",
    "start": "node index.js",
    "start:dev": "NODE_ENV=development nodemon index.js",
    "prettify": "pretty-quick --staged"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-plugin-mocha": "^10.0.5",
    "husky": "^8.0.1",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.2"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "statements": 80,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js"
    ]
  }
}
